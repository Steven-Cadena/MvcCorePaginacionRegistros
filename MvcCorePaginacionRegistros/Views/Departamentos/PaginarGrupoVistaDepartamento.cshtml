@model IEnumerable<MvcCorePaginacionRegistros.Models.VistaDepartamento>

@{
    ViewData["Title"] = "PaginarGrupoVistaDepartamento";
}
@{
    int numeroPagina = 1;
    int numeroregistros = (int)ViewData["NUMEROREGISTROS"];

 }

<h1>PaginarGrupoVistaDepartamento</h1>
<hr />
@Html.Raw(ViewData["LINKS"]) 
<hr />

/*paginacion razor siempre es mejor hacerlo así*/
/<h2>Paginación en razor</h2>
<ul class="list-group list-group-horizontal">
    @for (int i = 1; i <= numeroregistros; i += 2)
    {
        <li class="list-group-item list-group-item-info">
            <a asp-controller="Departamentos"
               asp-action="PaginarGrupoVistaDepartamento"
               asp-route-posicion="@i">
                @numeroPagina
            </a>
        </li>
        numeroPagina += 1;
    }
</ul>

<table class="table table-warning">
    <thead>
        <tr>
            <th>ID</th>
            <th>NOMBRE</th>
            <th>LOCALIDAD</th>
            <th>POSICION</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdDepartament)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Localidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Posicion)
            </td>
        </tr>
}
    </tbody>
</table>
